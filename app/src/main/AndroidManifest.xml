<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.think.uiloader">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.think.uiloader.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.RListViewActivity" android:label="@string/label_listview"/>
        <activity android:name=".ui.RRecyclerViewActivity" android:label="@string/label_recyclerview"/>
        <activity android:name=".ui.RViewGroupActivity" android:label="@string/label_viewgroup"/>
        <activity android:name=".ui.RTextViewActivity" android:label="@string/label_textview"/>
        <activity android:name=".ui.RWebViewActivity" android:label="@string/label_webview"/>
        <activity android:name=".ui.RGridViewActivity" android:label="@string/label_gridview"/>
        <activity android:name=".ui.RViewPagerActivity" android:label="@string/label_viewpage"/>
        <activity android:name=".ui.RScrollViewActivity" android:label="@string/label_scrollview"/>
        <activity android:name=".ui.RNotKeepHeadActivity" android:label="@string/label_notkeephead"/>
        <activity android:name=".ui.RKeepContentActivity" android:label="@string/label_keepcontent"/>
        <activity android:name=".ui.RCannotMoveHeadByTLRActivity" android:label="@string/label_cannot_move_head_by_tlr"/>
        <activity android:name=".ui.RAutoRefreshActivity" android:label="@string/label_autorefresh"/>
        <activity android:name=".ui.RRefreshMaxMoveDistanceActivity" android:label="@string/label_refresh_max_move_distance"/>
        <activity android:name=".ui.ROtherLibraryActivity" android:label="@string/label_otherlibrary"/>
        <activity android:name=".ui.TLRSunofOtherActivity" android:label="@string/label_sunofother"/>
        <activity android:name=".ui.TLRMultiContentActivity" android:label="@string/label_multicontent"/>
        <activity android:name=".ui.LListViewActivity" android:label="@string/label_listview_load"/>
        <activity android:name=".ui.RLListViewActivity" android:label="@string/label_listview_refresh_load"/>
        <activity android:name=".ui.RMaterialHeadActivity" android:label="@string/label_materialstyle"/>
        <activity android:name=".ui.RMaterialHeadKeepContentActivity" android:label="@string/label_materialstyle_keepcontent"/>
    </application>

</manifest>